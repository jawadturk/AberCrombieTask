<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_people"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_20dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_topDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textAllCaps="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/text_size_13sp"
        tools:text="Top Stating at 12$" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@{promotionViewModel.title}"
        android:textAllCaps="true"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/text_size_17sp"
        android:textStyle="bold"
        tools:text="title for the promo item" />

    <TextView
        android:id="@+id/label_promoMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/text_size_11sp"
        tools:text="Use code 12345" />

    <TextView
        android:id="@+id/label_bottomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/text_size_13sp"
        tools:text="Use code 12345" />
</LinearLayout>
